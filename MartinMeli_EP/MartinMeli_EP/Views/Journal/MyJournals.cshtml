@using MartinMeli_EP.Models

@{
    ViewBag.Title = "Journalist";
}

@{
    var journalist = (JournalistModel)ViewData["journalist"];
}

<h2>@journalist.Name @journalist.Surname's Journals</h2>

@foreach (var article in ViewBag.articles)
{
    <div class="col-lg-12">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">@Html.ActionLink((string)article.headline, "View/" + (string)article.articleId.ToString(), "Journal")
                    @Html.ActionLink("Delete", "Delete/" + (string)article.articleId.ToString(), "Journal", new object { }, new { @class = "pull-right" })
                    <small class="pull-right">|</small>
                    @Html.ActionLink("Edit", "Edit/" + (string)article.articleId.ToString(), "Journal", new object { }, new { @class = "pull-right" })
                </h3>
            </div>
            <img src="@article.imageURL" width="250" height="250" />
            <div class="panel-body">
                <b>@article.description</b>
            </div>
            <i>@journalist.Name @journalist.Surname</i>
        </div>
    </div>
}